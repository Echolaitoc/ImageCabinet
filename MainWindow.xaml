<Window x:Class="ImageCabinet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCabinet"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        Background="DarkSlateGray">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding ActualHeight, ElementName=TitleBar}"/>
    </WindowChrome.WindowChrome>
    <DockPanel>
        <local:TitleBar DockPanel.Dock="Top" x:Name="TitleBar"/>
        <Grid DockPanel.Dock="Top">
            <Border Margin="4" CornerRadius="4" BorderBrush="WhiteSmoke" BorderThickness="1" MinHeight="32">

            </Border>
        </Grid>
        <Grid>
            
        </Grid>
    </DockPanel>
</Window>
